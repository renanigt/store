<p id="notice"><%= notice %></p>

<div>
  <%= form_tag(search_shop_path, method: "get") do %>
    <%= label_tag :search, "Search by name:" %> <br>
    <%= text_field_tag :search, params[:search], placeholder: "Search Shops" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<h1>Listing Shops</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Description</th>
    <th>Products</th>
  </thead>

  <tbody>
    <% @shops.each do |shop|%>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.description %></td>
        <td>
          <%= shop.product.size %>
        </td>
        <td><%= link_to "Show", shop %></td>
        <td><%= link_to "Edit", edit_shop_path(shop) %></td>
        <td><%= link_to "Destroy", shop, method: :delete, data: { confirm: "Are you sure ?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Shop', new_shop_path %>
